{
  "name": "Dev Container Spring Boot + MySQL",
  "dockerComposeFile": "docker-compose.yml",
  "service": "app",
  "workspaceFolder": "/workspace",
  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2": {"moby": false}
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "redhat.vscode-yaml",
        "ms-azuretools.vscode-docker",
        "vscjava.vscode-java-pack",
        "vmware.vscode-spring-boot",
        "pivotal.vscode-spring-boot-dashboard",
        "vmware.vscode-spring-initializr",
        "redhat.vscode-yaml"
      ]
    }
  },
  "postCreateCommand": "sudo chown -R vscode:vscode /home/vscode/.m2 && ./mvnw -q -DskipTests compile"

}
