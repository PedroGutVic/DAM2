<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/chistes"
    android:padding="16dp">

    <TextView
        android:id="@+id/txt_title_tts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sintetizador de Chistes (TTS)"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="32dp" />

    <TextView
        android:id="@+id/txt_lang_info"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Idioma de voz: Cargando..."
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_title_tts" />

    <TextView
        android:id="@+id/txt_joke_display"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:padding="16dp"
        android:text="Pulsa para escuchar un chiste..."
        android:textSize="18sp"
        android:minLines="5"
        android:background="#F0F0F0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_lang_info" />

    <Button
        android:id="@+id/btn_random_joke"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="CHISTE ALEATORIO"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_joke_display" />

    <Button
        android:id="@+id/btn_all_jokes"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="ESCUCHAR 10 CHISTES (SERIE)"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_random_joke" />

</androidx.constraintlayout.widget.ConstraintLayout>